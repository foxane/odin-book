{
  "name": "odinbook-api",
  "module": "src/app.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file=.env.development src/index.ts",
    "build": "rm -rf ./dist && tsc && tsc-alias",
    "start": "node dist/index.js",
    "docker:build": "docker build -t odinbook-api . && docker image prune -f",
    "docker:run": "docker run -d --name odinbook-api -v $(pwd)/logs:/home/node/app/logs --env-file .env.production -p 3000:3000 odinbook-api",
    "docker:logs": "docker logs -f odinbook-api",
    "docker:start": "npm run docker:build && npm run docker:run && npm run docker:logs"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@supabase/storage-js": "^2.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "sanitize-html": "^2.14.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/sanitize-html": "^2.13.0",
    "prisma": "^6.2.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
