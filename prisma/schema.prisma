generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String? @unique
  password String?
  avatar   String

  provider Provider?
}

model Provider {
  id   String @id
  name String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique
}
